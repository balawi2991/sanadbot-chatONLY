# قاعدة البيانات
# للتطوير: استخدم SQLite
DATABASE_URL="file:./dev.db"

# للإنتاج: استخدم PostgreSQL
# DATABASE_URL="postgresql://username:password@localhost:5432/sanadbot"

# إعدادات NextAuth.js
# رابط التطبيق
NEXTAUTH_URL="http://localhost:3002"

# مفتاح سري للتشفير (يجب أن يكون قوياً ومعقداً)
# يمكنك توليد مفتاح جديد من: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-very-secure-secret-key-here"

# مفتاح Gemini AI (مطلوب)
# احصل عليه من: https://aistudio.google.com/
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"

# إعدادات اختيارية

# بيئة التشغيل (development, production)
NODE_ENV="development"

# رابط قاعدة البيانات المباشر (للإنتاج)
# DIRECT_URL="postgresql://username:password@localhost:5432/sanadbot"

# إعدادات CORS (للإنتاج)
# ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# إعدادات التخزين (للملفات)
# UPLOAD_DIR="./uploads"
# MAX_FILE_SIZE="10485760" # 10MB

# إعدادات البريد الإلكتروني (للإشعارات)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# إعدادات التحليلات (اختياري)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# MIXPANEL_TOKEN="your-mixpanel-token"

# إعدادات التخزين السحابي (اختياري)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket-name"